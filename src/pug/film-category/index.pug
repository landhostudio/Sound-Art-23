extends ../_layout
block prepend head
  - var page = 'Film category'
block content
  include ../components/_header

  article.filmography-category

    block prepend ../components/_hero

      - var heroFull = true
      - var heroAlternative = false
      - var heroReverse = false

      - var heroFullImage = ''
      - var heroADV = ''
      - var heroCover = ''
      - var heroIcon = ''
      - var heroAvatar = ''
      - var heroImage = ''
      - var heroTitle = 'Featured'
      - var heroDesc = 'Along with conventional advertising and below the line activities.'
      - var heroDate = ''

      - var heroCTAlink = ''
      - var heroCTAtitle = ''

      - var heroWatchID = ''
      - var heroWatchTitle = ''

      - var heroEmail = ''
      - var heroEmailTitle = ''

      - var heroMapLat = ''
      - var heroMapLng = ''

    include ../components/_hero

    div.filmography-category-items
      div.container.container--grid

        mixin film(filmTitle,filmDesc,filmCover,filmLink)
        
          article.filmography-category-item.container-column.container-column--two-m.container-column--three-l
            div.filmography-category-item-content(data-aos='fade', data-aos-duration='1000')
              div.filmography-category-item-content-image
                img(src=filmCover, alt='')
              div.filmography-category-item-content-text
                h3 #{filmTitle}
                p #{filmDesc}
                a.button-cta.button-cta--small(href=filmLink) Read more

