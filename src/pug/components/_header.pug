header.header(role='banner')
  div.container
    div.header-logo
      h1
        a(href='/')
          span.hidden #{title}
          include ../../img/logo.svg
    div.header-toggle
      button.toggle-button(type='button')
        span.hidden Open navigation
        div.state-1
          include ../../img/nav.svg
        div.state-2
          include ../../img/nav-close.svg
    nav.header-nav
      h2.hidden Navigation
      ul.no-list
        li.header-nav-page.header-nav-page--active
          a(href='#') Home
        li.header-nav-page
          a(href='#') Services
        li.header-nav-page
          a(href='#') Filmography
        li.header-nav-page
          a(href='#') Team
        li.header-nav-page
          a(href='#') Blog
        li.header-nav-page
          a(href='#') About
        li.header-nav-page
          a(href='#') Contact
    div.header-lang
      include ../components/_dropdown.pug
