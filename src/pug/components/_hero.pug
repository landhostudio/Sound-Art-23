if ( heroImage && heroTitle && heroDesc && heroButtonLink && heroButtonTitle )
  block hero
    header.hero
      div.container
        if ( heroImage )
          div.hero-image
            img(src=heroImage alt='')
        if ( heroTitle && heroDesc && heroButtonLink && heroButtonTitle )
          div.hero-content
            if ( heroTitle )
              h2 #{heroTitle}
            if ( heroDesc )
              p #{heroDesc}
            if ( heroButtonLink || heroButtonTitle )
              a.button(href=heroButtonLink) #{heroButtonTitle}
