extends _layout
block prepend head
  - var page = 'Home'
block content
  include components/_header

  article

    block prepend components/_hero
    
      - var heroAlternative = false
      - var heroReverse = true

      - var heroADV = '/img/mic.png'
      - var heroCover = ''
      - var heroIcon = ''
      - var heroAvatar = ''
      - var heroImage = ''
      - var heroTitle = 'More than 40 years in the sound production business'
      - var heroDesc = 'Classifieds are usually the first place you think of when you are getting ready to make a purchase. Whether you want to purchase a vehicle'

      - var heroCTAlink = '/services'
      - var heroCTAtitle = 'Our services'

      - var heroWatchID = ''
      - var heroWatchTitle = ''

      - var heroMapLat = ''
      - var heroMapLng = ''

    include components/_hero

    section.featured

      block prepend components/_hero
      
        - var heroAlternative = true
        - var heroReverse = false

        - var heroADV = '/img/artwork-2.png'
        - var heroCover = ''
        - var heroIcon = ''
        - var heroAvatar = ''
        - var heroImage = ''
        - var heroTitle = 'We provide services for international films worldwide'
        - var heroDesc = 'It can also have much more detail, such as name to contact, address to contact or visit, a description of the product'

        - var heroCTAlink = '#'
        - var heroCTAtitle = 'Our filmography'

        - var heroWatchID = ''
        - var heroWatchTitle = ''

        - var heroMapLat = ''
        - var heroMapLng = ''

      include components/_hero
      
      div.featured-items
        div.container(data-aos='fade-up', data-aos-duration='1500', data-aos-offset='8')
          div.swiper-container

            div.swiper-wrapper
              
              mixin swiperSlide(swiperImage, swiperTitle, swiperDesc, swiperButtonLink, swiperButtonTitle)
                article.swiper-slide
                  div.swiper-slide-content
                    div.swiper-slide-content-image
                      img(src=swiperImage alt='')
                    div.swiper-slide-content-text
                      h3.h2 #{swiperTitle}
                      p #{swiperDesc}
                      a.button-cta.button-cta--small(href=swiperButtonLink) #{swiperButtonTitle}

              +swiperSlide('/img/movie-1.jpg', 'Our working process behind La Haine', 'While most people enjoy standard hirarchy and excitement it provides, others may experience gambling', '#', 'Read more')
              +swiperSlide('/img/movie-2.jpg', 'Our philosophy behind sound in City of God', 'Point view, the till at a shop check out, has become very complex over the past ten years', '#', 'Read more')
              +swiperSlide('/img/movie-3.jpg', 'Mastering sound of DiCaprioâ€™s The Departed', 'Always write down all details of every phone call. Write down any names and titles you learn.', '#', 'Read more')

            div.swiper-pagination

    div.about

      block prepend components/_hero
      
        - var heroAlternative = false
        - var heroReverse = true

        - var heroADV = '/img/headphones.png'
        - var heroCover = ''
        - var heroIcon = ''
        - var heroAvatar = ''
        - var heroImage = ''
        - var heroTitle = 'Our team has more than 40 years of experience in industry evolution'
        - var heroDesc = 'Classifieds are usually the first place you think of when you are getting ready to make a purchase. Whether you want to purchase a vehicle'

        - var heroCTAlink = '#'
        - var heroCTAtitle = 'Our team'

        - var heroWatchID = ''
        - var heroWatchTitle = ''

        - var heroMapLat = ''
        - var heroMapLng = ''

      include components/_hero

  include components/_cta
  include components/_footer
