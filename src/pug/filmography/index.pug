extends ../_layout
block prepend head
  - var page = 'Filmography'
block content
  include ../components/_header

  article.filmography

    block prepend ../components/_hero

      - var heroFull = false
      - var heroAlternative = true
      - var heroReverse = true

      - var heroFullImage = ''
      - var heroADV = '/img/artwork-2.png'
      - var heroCover = ''
      - var heroIcon = ''
      - var heroAvatar = ''
      - var heroImage = ''
      - var heroTitle = '20-years of experience in filmography industry'
      - var heroDesc = 'If you are in the market for a computer, there are a number of factors to consider. Will it be used for your home, your office'

      - var heroCTAlink = ''
      - var heroCTAtitle = ''

      - var heroWatchID = ''
      - var heroWatchTitle = ''

      - var heroEmail = ''
      - var heroEmailTitle = ''

      - var heroMapLat = ''
      - var heroMapLng = ''

    include ../components/_hero

    section.filmography-category

      header.filmography-category-header
        div.container.container--grid
          div.container-column.container-column--two-all
            div.filmography-category-header-content
              h3.h2 Featured
              p Along with conventional advertising and below the line activities.
          div.container-column.container-column--two-all
            div.filmography-category-header-all
              a.button-cta.button-cta--small(href='/film-category') Show all

      div.filmography-category-items
        div.container
          div.container--scroll
            
            mixin film(filmTitle,filmCover,filmLink)
              article.filmography-category-item.container-column.container-column--auto
                a.filmography-category-item-link(href=filmLink)
                  h4.hidden #{filmTitle}
                  img(src=filmCover, alt='')
            
            +film('Film 1', '/img/film-cover-1.png', '/film')
            +film('Film 2', '/img/film-cover-2.png', '/film')
            +film('Film 3', '/img/film-cover-3.png', '/film')
            +film('Film 4', '/img/film-cover-4.png', '/film')
